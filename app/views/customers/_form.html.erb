<div class="container">
<div class="col s12">
<%= simple_form_for(@customer, html: { class: 'form-horizontal' }) do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Customer</legend>
      <div class="row">
        <div class="input-field col s4">
          <%= f.input :first_name, label: 'First Name' %>
        </div>
        <div class="input-field col s4">
          <%= f.input :last_name, label: 'Last Name' %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.input :email, label: 'Enter email address here' %>
        </div>
        <div class="input-field col s6">
          <%= f.input :phone, label: 'Enter phone number' %>
        </div>
        <div class="input-field col s4">
          <%= f.input :active, as: :radio_buttons %>
        </div>
      </div>
    <div class="form-actions">
      <%= f.submit nil, class: 'btn' %>
      <%= link_to 'Cancel', customers_path, :class => 'btn deep-orange lighten-3' %>
    </div>
  <%= link_to 'Back', customers_path %>
  </fieldset>
<% end %>
</div>
</div>