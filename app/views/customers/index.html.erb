<% if @customers.empty? %>
 <h4>No active customers at this time</h4>
<% else %>
<h4>Listing Active Customers</h4>
<table>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>
<!--Show active customers-->
<% @active_customers.each do |customer| %>
  <tr>
    <td><%= link_to customer.name, customer_path(customer) %></td>
    <td><%= number_to_phone(customer.phone) %></td>
    <td><%= customer.email %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, data: { confirm: 'Are you sure?' }, method: :delete %></td>
  </tr>
<% end %>
</table>

<table>
  <tr>
    <th>Customer</th>
    <th></th>
    <th></th>
  </tr>
<!--Show inactive customers-->
<h4>Inactive Customers</h4>
<% @inactive_customers.each do |customer| %>
  <tr>
    <td><%= link_to customer.name, customer_path(customer) %></td>
    <td><%= number_to_phone(customer.phone) %></td>
    <td><%= customer.email %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, data: { confirm: 'Are you sure?' }, method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @customers, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<br />
<% end %>
<%= link_to 'New Customer', new_customer_path %>

